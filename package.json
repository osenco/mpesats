{
  "name": "@osenco/mpesa",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "contributors": [
    "Osen Concepts <hi@osenco.co.ke>",
    "Odhiambo Dormnic<ayimdomnic@gmail.com>"
  ],
  "license": "MIT",
  "repository": "osenco/mpesats",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "body-max-length": [
        0
      ],
      "body-max-line-length": [
        0
      ],
      "footer-max-length": [
        0
      ],
      "footer-max-line-length": [
        0
      ],
      "header-max-length": [
        0
      ]
    }
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
  },
  "scripts": {
    "clean": "lerna clean && lerna run clean",
    "cz": "git-cz",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "generate-contributors": "yarn ts-node --transpile-only ./tools/generate-contributors.ts && yarn all-contributors generate",
    "pre-commit": "yarn lint-stagged",
    "pre-push": "yarn check-format",
    "postinstall": "yarn husky install",
    "lint": "eslint .js, .ts",
    "typecheck": "nx run-many --target=typecheck --all --parallel"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/config-lerna-scopes": "^13.2.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@nrwl/angular": "^13.1.2",
    "@nrwl/cli": "^13.1.2",
    "@nrwl/eslint-plugin-nx": "13.1.2",
    "@nrwl/jest": "13.1.2",
    "@nrwl/linter": "13.1.2",
    "@nrwl/nest": "^13.1.2",
    "@nrwl/node": "^13.1.2",
    "@nrwl/nx-cloud": "^12.5.1",
    "@nrwl/react": "^13.1.2",
    "@nrwl/tao": "^13.1.2",
    "@nrwl/web": "13.1.2",
    "@nrwl/workspace": "^13.1.2",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@types/jest": "27.0.2",
    "@types/node": "^16.11.6",
    "@types/prettier": "^2.4.1",
    "@types/react": "17.0.30",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "~4.33.0",
    "@typescript-eslint/parser": "~4.33.0",
    "all-contributors-cli": "^6.20.0",
    "babel-jest": "27.2.3",
    "cspell": "^5.12.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "pretty-format": "^27.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": ">=3.3.1 <4.5.0"
  },
  "resolutions": {
    "@types/node": "^16.11.4",
    "typescript": "4.4.4"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "core-js": "^3.6.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "0.13.7",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0"
  }
}
